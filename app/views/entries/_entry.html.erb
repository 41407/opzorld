<div class = "entry">
  <div class = "padded row">
    <% if entry.photo.file? %>
      <% if session[:logged_in] then %>
        <%= link_to (image_tag entry.photo.url, :class => "img-responsive centered fit-to-screen-vertically"), entry %> 
      <% else %>
        <%= image_tag entry.photo.url, :class => "img-responsive centered fit-to-screen-vertically"%> 
      <% end %>
    <% end %>
    <div class = "row capture-time-and-description">
      <p class = "capture-time"> <%= entry.month_and_day unless entry.capture_time.nil? %></p>
      <p class = "description"><%= entry.description %> </p>
	</div>
  </div>
</div>